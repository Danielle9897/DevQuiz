<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dev Quiz</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")      
    
</head>
<body id="user-body">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Developer Quiz", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @Html.ActionLink("Test yourself", "Index", "Quiz", new { area = "" }, htmlAttributes: new {
                                                                                                       title = "Start Quiz",
                                                                                                       data_toggle = "tooltip",
                                                                                                       data_placement = "bottom"
                                                                                              })
                    </li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li> 
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li> 
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content user-container">
        @RenderBody()
        <br /><br /><br /><hr />        
        <footer><p>&copy; @DateTime.Now.Year - Dev Quiz Application</p></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")   
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/quiz.js"></script>

    @RenderSection("scripts", required: false)    
  
</body>
</html>
